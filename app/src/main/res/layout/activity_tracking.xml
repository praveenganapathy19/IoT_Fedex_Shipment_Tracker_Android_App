<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.fedextracking.Tracking">

    <EditText
        android:id="@+id/txtTrack"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Tracking No."
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txtViewTrackID"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp" />

    <TextView
        android:id="@+id/txtViewTrackID"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:text="TRACKING ID"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp" />

    <Button
        android:id="@+id/btnTracking"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Track"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="77dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTrack" />
</android.support.constraint.ConstraintLayout>
