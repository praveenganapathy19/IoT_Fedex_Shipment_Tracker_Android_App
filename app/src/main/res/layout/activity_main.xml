<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.fedextracking.MainActivity">

    <Button
        android:id="@+id/btnTrackMain"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:text="Track a Package"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="---------------OR---------------"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTrackMain" />

    <Button
        android:id="@+id/btnSendMain"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Send a package"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
